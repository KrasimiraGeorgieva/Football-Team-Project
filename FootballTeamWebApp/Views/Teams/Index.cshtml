@model IEnumerable<FootballTeamWebApp.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Teams list</h2>

<p>
    @Html.ActionLink("Add New Team", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Team Name
        </th>
        <th>
            Date of creation
        </th>
        <th>
            Stadium
        </th>
        <th>
            Owner
        </th>
        <th>
            Coach
        </th>
        <th>
            Web site
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfCreation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stadium)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebSite)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
